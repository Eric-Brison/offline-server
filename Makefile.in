PACKAGE = @PACKAGE@
VERSION = @VERSION@
RELEASE = @RELEASE@
utildir=@PUBRULE@
pubdir = @prefix@
appname = @APPNAME@
srcdir = @srcdir@
applib = FDL
libdir=$(pubdir)/lib

export pubdir utildir applib appname libdir

SUBDIR= Families Lib Actions Images targets patches locale

TOP_MODULES =

TAR = tar
GZIP_ENV = --best

export targetdir PACKAGE

pages_not_xml = info.xml

include $(utildir)/PubRule

DISTFILES += $(SUBDIR) \
            RELEASE VERSION

.PHONY: publish clean webinst webinst-admin

_static_dirs:
	mkdir -p $(pubdir)/share/offline/clients $(pubdir)/share/offline/customize

publish: _static_dirs

webinst-admin:
	make -C Admin webinst RELEASE=$(RELEASE) PACKAGE=$(PACKAGE)-admin VERSION=$(VERSION) appname=@APPNAME@_ADMIN
	mv Admin/*webinst .

webinst: webinst-admin

clean:	
	/bin/rm -f *.*~ config.* Makefile configure $(appname)_init.php info.xml $(PACKAGE)-*webinst
	/bin/rm -fr autom4te.cache
